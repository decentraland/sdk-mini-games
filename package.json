{
  "name": "@dcl-sdk/mini-games",
  "version": "1.0.0",
  "description": "SDK7 Library to handle Players Queue logic for Multiplayers Game",
  "scripts": {
    "dev": "tsc -p tsconfig.json --watch",
    "build": "tsc -p tsconfig.json",
    "upgrade-sdk": "npm install --save-dev @dcl/sdk@latest",
    "upgrade-sdk:next": "npm install --save-dev @dcl/sdk@next",
    "lint-fix": "eslint . --ext .ts,.tsx --fix",
    "lint": "eslint . --ext .ts,.tsx",
    "postinstall": "node scripts/postinstall.js",
    "prepare": "node scripts/postinstall.js"
  },
  "devDependencies": {
    "@dcl/eslint-config": "^2.2.1",
    "typescript": "^5.5.4"
  },
  "prettier": {
    "semi": false,
    "singleQuote": true,
    "printWidth": 120,
    "trailingComma": "none"
  },
  "dependencies": {
    "@dcl-sdk/utils": "^1.2.8",
    "@dcl/js-runtime": "latest",
    "@dcl/sdk": "latest"
  },
  "repository": {
    "url": "https://github.com/decentraland/sdk-mini-games"
  }
}
